services:
  nocodb:
    image: {{ image.nocodb }}
    restart: unless-stopped
    container_name: nocodb
    environment: 
      NC_DB: "pg://root_db:5432?u=postgres&p=password&d=root_db"
    volumes:
      - caddy_data:/data
    ports:
      - "8080:8080"
    networks:
      - proxy-net

volumes:
  caddy_data:
    external: true
  caddy_config:

networks:
  proxy-net:
    name: reverse_proxy
    external: true
