# Base image
FROM node:14.17.6-alpine as build-stage

# Set working directory
WORKDIR /forms-flow-web-root-config/app

# Set build arguments
ARG NODE_ENV
ARG MF_FORMSFLOW_WEB_URL
ARG MF_FORMSFLOW_NAV_URL
ARG MF_FORMSFLOW_SERVICE_URL
ARG MF_FORMSFLOW_ADMIN_URL
ARG MF_FORMSFLOW_THEME_URL

# Set environment variables
ENV MF_FORMSFLOW_WEB_URL ${MF_FORMSFLOW_WEB_URL}
ENV MF_FORMSFLOW_NAV_URL ${MF_FORMSFLOW_NAV_URL}
ENV MF_FORMSFLOW_SERVICE_URL ${MF_FORMSFLOW_SERVICE_URL}
ENV MF_FORMSFLOW_ADMIN_URL ${MF_FORMSFLOW_ADMIN_URL}
ENV MF_FORMSFLOW_THEME_URL ${MF_FORMSFLOW_THEME_URL}
ENV NODE_ENV ${NODE_ENV}

# Add `/app/node_modules/.bin` to $PATH
ENV PATH /forms-flow-web-root-config/app/node_modules/.bin:$PATH

# Install necessary packages
RUN apk update && apk upgrade && \
    apk add --no-cache bash git openssh

# Install and cache app dependencies
COPY package-lock.json /forms-flow-web-root-config/app/package-lock.json
COPY package.json /forms-flow-web-root-config/app/package.json
COPY env.sh /forms-flow-web-root-config/app/env.sh
RUN npm ci --only=production

# Copy source code
COPY . /forms-flow-web-root-config/app/

# Build the application
RUN if [ $NODE_ENV == "development" ]; then \
        npm run build-dev:webpack; \
    else \
        npm run build:webpack; \
    fi


# Production stage
FROM nginx:1.25.3-alpine as production-stage

# Set label for image
LABEL Name="formsflow"

# Create directories
RUN mkdir /app
WORKDIR /usr/share/nginx/html/config

# Copy built files from build stage
COPY --from=build-stage /forms-flow-web-root-config/app/dist /usr/share/nginx/html
COPY --from=build-stage /forms-flow-web-root-config/app/env.sh /usr/share/nginx/html/config

# Copy file to host them locally
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/dmn-js/dist /usr/share/nginx/html/dmn-js@12.3.0/dist
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/flatpickr/dist/flatpickr.min.js /usr/share/nginx/html/flatpickr/flatpickr.min.js
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/flatpickr/dist/flatpickr.min.css /usr/share/nginx/html/flatpickr/flatpickr.min.css
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/flatpickr/dist/l10n/ar.js /usr/share/nginx/html/flatpickr/dist/l10n/ar.js
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/systemjs/dist/ /usr/share/nginx/html/systemjs@6.8.3/dist/
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/import-map-overrides/dist/import-map-overrides.js /usr/share/nginx/html/import-map-overrides@2.2.0/dist/import-map-overrides.js
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/single-spa/lib/system/single-spa.min.js /usr/share/nginx/html/single-spa@5.9.0/lib/system/single-spa.min.js
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/regenerator-runtime/runtime.js /usr/share/nginx/html/regenerator-runtime@0.13.7/runtime.js
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/font-awesome/css/font-awesome.min.css /usr/share/nginx/html/font-awesome/css/font-awesome.min.css
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/formiojs@4.13.1/dist/fonts/fontawesome-webfont.woff2
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/formiojs@4.13.1/dist/fonts/fontawesome-webfont.woff
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/formiojs@4.13.1/dist/fonts/fontawesome-webfont.ttf
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/font-awesome/fonts/fontawesome-webfont.woff2
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/font-awesome/fonts/fontawesome-webfont.woff
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/formiojs/dist/fonts/fontawesome-webfont.woff2 /usr/share/nginx/html/font-awesome/fonts/fontawesome-webfont.ttf
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/bootstrap/dist/css/bootstrap.css /usr/share/nginx/html/bootstrap@4.6.0/dist/css/bootstrap.css
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/react/umd /usr/share/nginx/html/react@17.0.2/umd
COPY --from=build-stage /forms-flow-web-root-config/app/node_modules/react-dom/umd /usr/share/nginx/html/react-dom@17.0.2/umd


# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose port
EXPOSE 8080

# Install necessary packages
RUN apk add --no-cache bash

# Set execute permission for env.sh
RUN chmod +x /usr/share/nginx/html/config/env.sh

# Start Nginx server with environment setup
CMD ["/bin/bash", "-c", "nginx -g \"daemon off;\""]
# CMD ["/bin/bash", "-c", "/usr/share/nginx/html/config/env.sh && nginx -g \"daemon off;\""]
