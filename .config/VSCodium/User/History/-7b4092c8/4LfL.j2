REDASH_HOST=https://redash.formsflow.publicplan.cloud
PYTHONUNBUFFERED=0
REDASH_LOG_LEVEL=INFO
REDASH_REDIS_URL=redis://redis:6379/0
POSTGRES_USER={{ redash.database.username }}
POSTGRES_PASSWORD={{ redash_database_password }}
POSTGRES_DB={{ redash.database.database }}
REDASH_COOKIE_SECRET={{ redash_cookie_secret }}
REDASH_SECRET_KEY={{ redash_secret_key }}
REDASH_DATABASE_URL=postgresql://{{ redash.database.username }}:{{ redash_database_password }}@postgres/{{ redash.database.database }}
REDASH_CORS_ACCESS_CONTROL_ALLOW_ORIGIN=*
REDASH_REFERRER_POLICY=no-referrer-when-downgrade
REDASH_CORS_ACCESS_CONTROL_ALLOW_HEADERS=Content-Type, Authorization

